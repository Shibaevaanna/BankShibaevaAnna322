<Page x:Class="BankShibaevaAnna322.DepositsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankShibaevaAnna322"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DepositsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Name="DataGridDeposits" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название вклада" Binding="{Binding NameOfDeposit}" Width="*" />
                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount}" Width="*" />
                <DataGridTextColumn Header="Процентная ставка" Binding="{Binding InterestRate}" Width="*" />
                <DataGridTextColumn Header="Срок" Binding="{Binding Duration}" Width="*" />
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="ButtonEditDeposit" Content="Редактировать" Click="ButtonEditDeposit_OnClick" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки для управления вкладами -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="ButtonEditDeposit" Content="Редактировать" Click="ButtonEditDeposit_OnClick" Width="150" Margin="5"/>
            <Button Name="ButtonAddDeposit" Content="Добавить вклад" Click="ButtonAddDeposit_OnClick" Width="150" Margin="5"/>
            <Button Name="ButtonDelDeposit" Content="Удалить вклад" Click="ButtonDelDeposit_OnClick" Width="150" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
