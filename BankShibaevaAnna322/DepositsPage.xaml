<Page x:Class="BankShibaevaAnna322.DepositsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankShibaevaAnna322"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DepositsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" HorizontalAlignment="Center" Margin="10">
            <TextBox x:Name="SearchDepositName" Width="150" TextChanged="SearchDepositName_TextChanged" />
            <TextBlock Text="Введите название вклада" VerticalAlignment="Center" Margin="5,0,10,0" FontSize="14"/>
            <ComboBox x:Name="FilterDuration" Width="150" SelectionChanged="FilterDuration_SelectionChanged" Margin="0,0,10,0">
                <ComboBoxItem Content="Все" IsSelected="True"/>
                <ComboBoxItem Content="6 месяцев"/>
                <ComboBoxItem Content="12 месяцев"/>
                <ComboBoxItem Content="24 месяца"/>
                <ComboBoxItem Content="36 месяцев"/>
            </ComboBox>
            <TextBlock Text="Фильтровать по сроку" VerticalAlignment="Center" FontSize="14"/>
            <ComboBox x:Name="SortBy" Width="150" SelectionChanged="SortBy_SelectionChanged" Margin="10,0,0,0">
                <ComboBoxItem Content="Без сортировки" IsSelected="True"/>
                <ComboBoxItem Content="По сумме (по возрастанию)"/>
                <ComboBoxItem Content="По сумме (по убыванию)"/>
                <ComboBoxItem Content="По процентной ставке (по возрастанию)"/>
                <ComboBoxItem Content="По процентной ставке (по убыванию)"/>
            </ComboBox>
            <Button Content="Очистить фильтр" FontSize="10" Click="ClearFilter_OnClick" Margin="10,0,0,0"/>
        </WrapPanel>

        <DataGrid Grid.Row="1" Name="DataGridDeposits" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название вклада" Binding="{Binding NameOfDeposit}" Width="*"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount}" Width="100"/>
                <DataGridTextColumn Header="Процентная ставка" Binding="{Binding InterestRate}" Width="120"/>
                <DataGridTextColumn Header="Срок" Binding="{Binding Duration}" Width="100"/>
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Редактировать" Click="ButtonEditDeposit_OnClick"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Редактировать" Click="ButtonEditDeposit_OnClick" Width="150" Margin="5" Style="{StaticResource CustomButtonStyle}"/>
            <Button Content="Добавить вклад" Click="ButtonAddDeposit_OnClick" Width="150" Margin="5" Style="{StaticResource CustomButtonStyle}"/>
            <Button Content="Удалить вклад" Click="ButtonDelDeposit_OnClick" Width="150" Margin="5" Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
