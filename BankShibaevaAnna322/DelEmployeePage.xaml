<Page x:Class="BankShibaevaAnna322.DelEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Удалить сотрудника" Margin="20">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Вы действительно хотите удалить этого сотрудника?" FontSize="16" Margin="0,0,0,20" TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Удалить" Width="100" Margin="5" Click="ButtonDeleteClick"/>
            <Button Content="Отмена" Width="100" Margin="5" Click="ButtonCancelClick"/>
        </StackPanel>
    </StackPanel>

</Page>

