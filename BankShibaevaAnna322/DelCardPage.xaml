<Page x:Class="BankShibaevaAnna322.DelCardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Удалить карту" Margin="20">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
        <TextBlock Text="Вы действительно хотите удалить эту карту?" FontSize="16" Margin="0,0,0,20" TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Удалить" Width="100" Margin="5" Click="ButtonDelete_Click"/>
            <Button Content="Отмена" Width="100" Margin="5" Click="ButtonCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Page>

