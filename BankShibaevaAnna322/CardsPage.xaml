<Page x:Class="BankShibaevaAnna322.CardsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankShibaevaAnna322"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CardsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Name="DataGridCards" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер карты" Binding="{Binding CardNumber}" Width="*" />
                <DataGridTextColumn Header="Тип карты" Binding="{Binding CardType}" Width="*" />
                <DataGridTextColumn Header="Состояние карты" Binding="{Binding CardStatus}" Width="*" />
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="ButtonEditCard" Content="Редактировать" Click="ButtonEditCard_OnClick" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="ButtonEditCard" Content="Редактировать" Click="ButtonEditCard_OnClick" Width="150" Margin="5"/>
            <Button Name="ButtonAddCard" Content="Добавить карту" Click="ButtonAddCard_OnClick" Width="150" Margin="5"/>
            <Button Name="ButtonDelCard" Content="Удалить карту" Click="ButtonDelCard_OnClick" Width="150" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>

