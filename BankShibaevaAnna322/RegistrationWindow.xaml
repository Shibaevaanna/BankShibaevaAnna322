<Window x:Class="BankShibaevaAnna322.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="520" Width="360" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{StaticResource BackgroundBrush}" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"
                   Style="{StaticResource HeaderTextStyle}" Margin="0, 10, 0, 20" />

        <Label Content="Имя:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"
               Style="{StaticResource CustomLabelStyle}" />
        <TextBox x:Name="nameTextBox" Grid.Row="1" Grid.Column="1" Height="29" Style="{StaticResource CustomTextBoxStyle}" />

        <Label Content="Фамилия:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"
               Style="{StaticResource CustomLabelStyle}" />
        <TextBox x:Name="surnameTextBox" Grid.Row="2" Grid.Column="1" Height="29" Style="{StaticResource CustomTextBoxStyle}" />

        <Label Content="Отчество:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"
               Style="{StaticResource CustomLabelStyle}" />
        <TextBox x:Name="patronymicTextBox" Grid.Row="3" Grid.Column="1" Height="29" Style="{StaticResource CustomTextBoxStyle}" />

        <Label Content="Логин:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"
               Style="{StaticResource CustomLabelStyle}" />
        <TextBox x:Name="loginTextBox" Grid.Row="4" Grid.Column="1" Height="29" Style="{StaticResource CustomTextBoxStyle}" />

        <Label Content="Пароль:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"
               Style="{StaticResource CustomLabelStyle}" />
        <PasswordBox x:Name="passwordBox" Grid.Row="5" Grid.Column="1" Height="29" />

        <Label Content="Повторите пароль:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"
               Style="{StaticResource CustomLabelStyle}" />
        <PasswordBox x:Name="confirmPasswordBox" Grid.Row="6" Grid.Column="1" Height="29" />

        <Label Content="Роль:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"
               Style="{StaticResource CustomLabelStyle}" />
        <ComboBox x:Name="roleComboBox" Grid.Row="7" Grid.Column="1" Height="29" VerticalAlignment="Center" DisplayMemberPath="RoleName" SelectedValuePath="RoleID" />

        <Button Content="Зарегистрироваться" Grid.Row="9" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="35" Margin="0,20,0,0"
                Click="RegisterButtonClick" Style="{StaticResource CustomButtonStyle}" />
    </Grid>
</Window>
