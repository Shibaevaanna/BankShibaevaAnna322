<Page x:Class="BankShibaevaAnna322.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankShibaevaAnna322"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeesPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Name="DataGridEmployees" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя сотрудника" Binding="{Binding EmployeeName}" Width="*" />
                <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width="*" />
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="ButtonEditEmployee" Content="Редактировать" Click="ButtonEditEmployee_OnClick" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки для управления сотрудниками -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="ButtonEditEmployee" Content="Редактировать" Click="ButtonEditEmployee_OnClick" Width="150" Margin="5" Style="{StaticResource CustomButtonStyle}"/>
            <Button Name="ButtonAddEmployee" Content="Добавить сотрудника" Click="ButtonAddEmployee_OnClick" Width="150" Margin="5" Style="{StaticResource CustomButtonStyle}"/>
            <Button Name="ButtonDelEmployee" Content="Удалить сотрудника" Click="ButtonDelEmployee_OnClick" Width="150" Margin="5" Style="{StaticResource CustomButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>

