<Page x:Class="BankShibaevaAnna322.DelCreditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Удалить кредит">
    <Grid Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Вы уверены, что хотите удалить этот кредит?" TextWrapping="Wrap" Margin="10" TextAlignment="Center" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Удалить" Click="ButtonDelete_Click" Width="100" Margin="10" />
                <Button Content="Отмена" Click="ButtonCancel_Click" Width="100" Margin="10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
